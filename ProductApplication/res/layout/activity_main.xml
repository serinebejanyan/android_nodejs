<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:ems="10" />
    
     <EditText
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:layout_below="@+id/type"
        android:ems="10" />
	
       <EditText
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:layout_below="@+id/price"
        android:ems="10" />

       <EditText
           android:id="@+id/type"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/name"
           android:layout_alignTop="@+id/name"
           android:layout_marginTop="33dp"
           android:ems="10" />

       <EditText
           android:id="@+id/price"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/weight"
           android:layout_below="@+id/name"
           android:layout_marginTop="17dp"
           android:ems="10" >

           <requestFocus />
       </EditText>

       <Button
           android:id="@+id/submit_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignRight="@+id/brand"
           android:layout_below="@+id/weight"
           android:layout_marginTop="50dp"
           android:text="Submit" />

       <Button
           android:id="@+id/get_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/submit_button"
           android:layout_alignBottom="@+id/submit_button"
           android:layout_alignLeft="@+id/brand"
           android:layout_marginTop="50dp"
           android:text="Get" />

       <TextView
           android:id="@+id/nameText"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/name"
           android:layout_marginLeft="14dp"
           android:layout_toRightOf="@+id/name"
           android:text="Name" />

       <TextView
           android:id="@+id/typeText"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/type"
           android:layout_alignLeft="@+id/nameText"
           android:text="Type" />

       <TextView
           android:id="@+id/weightText"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/typeText"
           android:layout_below="@+id/name"
           android:text="Weight" />

       <TextView
           android:id="@+id/priceText"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/price"
           android:layout_alignLeft="@+id/weightText"
           android:text="Price" />

       <TextView
           android:id="@+id/brandText"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/weightText"
           android:layout_below="@+id/weight"
           android:text="Brand" />

</RelativeLayout>